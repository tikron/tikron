<?xml version="1.0" encoding="UTF-8"?>
<!--
	Spring configuration for email message handling.
-->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
					http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<bean id="mailSession" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>java:comp/env/mail/tikron</value>
		</property>
	</bean>
		
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="session" ref="mailSession"/>
		<property name="javaMailProperties">
			<props>
				<prop key="mail.mime.charset">${email.encoding:UTF-8}</prop>
			</props>
		</property>
	</bean>

	<bean id="emailService" class="de.tikron.common.spring.EmailServiceImpl">
		<property name="enabled" value="${email.enabled:true}" />
		<property name="senderEmail" value="${email.defaultSender}" />
		<property name="recipientEmail" value="${email.defaultRecipient}" />
	</bean>

</beans>
