<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="tikron-persistence" transaction-type="RESOURCE_LOCAL">
		<!-- Entities located in external project tikron-site-persistence -->
		<jar-file>/WEB-INF/lib/tikron-site-persistence-2.0.1-SNAPSHOT.jar</jar-file>
		<!-- Enable JPA 2 second level cache -->
		<shared-cache-mode>ALL</shared-cache-mode>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.cache.use_second_level_cache" value="false" />
			<property name="hibernate.cache.use_query_cache" value="false" />
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"/>
			<property name="hibernate.generate_statistics" value="false" /> 
			<property name="hibernate.show_sql" value="false" /> 
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
		</properties>
	</persistence-unit>
</persistence>
