<?xml version="1.0" encoding="UTF-8"?>

<!-- Copy this to Tomcat context.xml and add password attribute value -->
<!-- JNDI Datasource for Tikron Database -->
<Resource auth="Container" 
	name="jdbc/tikron" 
	type="javax.sql.DataSource" 
	driverClassName="com.mysql.jdbc.Driver" 
	factory="org.apache.tomcat.dbcp.dbcp2.BasicDataSourceFactory" 
	username="tikron" 
	password="********" 
	testOnBorrow="true" 
	testWhileIdle="true" 
	timeBetweenEvictionRunsMillis="10000" 
	url="jdbc:mysql://localhost:3306/tikron?useSSL=false&amp;useUnicode=yes&amp;characterEncoding=UTF-8&amp;relaxAutoCommit=true" 
	maxIdle="5" 
	maxTotal="10" 
	minEvictableIdleTimeMillis="60000" 
	validationQuery="SELECT 1"/>
		
