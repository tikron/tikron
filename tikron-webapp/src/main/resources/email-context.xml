<?xml version="1.0" encoding="UTF-8"?>
<!--
	Spring configuration for email message handling.
-->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<bean id="mailSession" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>java:comp/env/mail/tikron</value>
		</property>
	</bean>
		
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="session" ref="mailSession" />
	</bean>

	<bean id="mailService" class="de.tikron.common.spring.MailServiceImpl">
		<property name="mailSender" ref="mailSender" />
		<property name="enabled" value="${mail.enabled:true}" />
		<property name="senderEmail" value="${mail.template.from}" />
		<property name="recipientEmail" value="${mail.template.to}" />
	</bean>

</beans>
