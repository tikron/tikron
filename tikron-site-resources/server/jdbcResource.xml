<?xml version="1.0" encoding="UTF-8"?>

<!-- JDBC datasource to Tikron database -->
<!-- Copy this to the "GlobalNamingResources" section of Tomcat server.xml -->
<Resource name="jdbc/tikron"
	auth="Container"
	type="javax.sql.DataSource"
	factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
	maxActive="10"
	maxIdle="5"
	validationQuery="SELECT 1"
	testOnBorrow="true"
	testWhileIdle="true"
	timeBetweenEvictionRunsMillis="10000"
	minEvictableIdleTimeMillis="60000"
	username="tikron"
	password="********"
	driverClassName="com.mysql.jdbc.Driver"
	url="jdbc:mysql://localhost:3306/tikron?useUnicode=yes&amp;characterEncoding=UTF-8&amp;relaxAutoCommit=true"/>
		
